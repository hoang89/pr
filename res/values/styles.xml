<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />
    <style name="text_active" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/d001_active_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="text_inactive" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/d001_inactive_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    
     <style name="d014_label" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    
     <style name="d014_content" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
     <style name="d016_content" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
     <style name="k002_left" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">0px</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
    </style>
        
     <style name="k002_right" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>