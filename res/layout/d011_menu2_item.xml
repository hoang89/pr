<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/d011_menu2_image"
        android:layout_width="@dimen/d011_menu2_image_size"
        android:layout_height="@dimen/d011_menu2_image_size"
        android:scaleType="fitXY"
        android:src="@drawable/d001_image_sample" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/d011_menu2_des"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="2"
            android:gravity="bottom|right"
            android:text="@string/d001_default"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="@dimen/d011_menu2_text_size" />

        <TextView
            android:id="@+id/d011_menu2_price"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:gravity="bottom|right"
            android:text="@string/d001_default"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="@dimen/d011_menu2_text_size" />

    </LinearLayout>

</LinearLayout>