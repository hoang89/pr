<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_tab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_puripuri_logo" >

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:background="@drawable/top_right_button" />

        <Button
            android:id="@+id/c004_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:background="@drawable/d001_back_button" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/tab_bar"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <Button
            android:id="@+id/c004_btn_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:background="@drawable/button_bot_right" />

        <Button
            android:id="@+id/c004_btn_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:background="@drawable/button_bot_left" />
    </RelativeLayout>

    <TextView
        android:id="@+id/c04_title"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_above="@+id/content"
        android:layout_below="@+id/header"
        android:background="@drawable/d001blackrepeat"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="ID/PW を変更する"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/bottom"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/c04_title"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登録しているメールアドレス"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/c004_old_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/b003_shape"
            android:editable="false"
            android:padding="2dp"
            android:text="Test" >
        </EditText>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="パスワード（表示しておりません）"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/c004_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/b003_shape"
            android:clickable="false"
            android:editable="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="textPassword"
            android:padding="2dp"
            android:text="Test" >

        </EditText>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新しい ID（メールアドレス）"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/c004_new_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/k001_image_square"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:padding="2dp" >

        </EditText>
        
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="新しい ID (メールアドレス）※ 確認用"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/c004_new_email_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/k001_image_square"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:padding="2dp" >

        </EditText>
        
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="現在のパスワード"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/c004_current_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/k001_image_square"
            android:ems="10"
            android:inputType="textPassword"
            android:padding="2dp" >

        </EditText>
        
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="新しいパスワード"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/c004_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/k001_image_square"
            android:ems="10"
            android:inputType="textPassword"
            android:padding="2dp" >

        </EditText>

        <Button
            android:id="@+id/c004_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/k001_image_square"
            android:padding="10dp"
            android:text="変更を保存する" />

    </LinearLayout>

</RelativeLayout>